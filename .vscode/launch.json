    "version": "0.2.0",
    // SET CWD TO PROJECT ROOT/server
    "cwd": "${workspaceFolder}/server",
    "configurations": [{
            "name": "Python: Django runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\server\\manage.py",
            "args": [
                "runserver", "8000", "--settings=server.settings.dev"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Django makemigrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\server\\manage.py",
            "args": [
                "makemigrations", "--settings=server.settings.dev"
            ],
            "django": true,
            "justMyCode": true
        }, {
            "name": "Python: Django migrate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\server\\manage.py",
            "args": [
                "migrate", "--settings=server.settings.dev"
            ],
            "django": true,
            "justMyCode": true

        }, {
            "name": "Python: Django shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\server\\manage.py",
            "args": [
                "shell", "--settings=server.settings.dev"
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}